{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@growthops/types": ["packages/types/src/index"],
      "@growthops/config": ["packages/config/src/index"],
      "@growthops/ui": ["packages/ui/src/index"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
