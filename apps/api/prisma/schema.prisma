generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  users     User[]
  dashboards Dashboard[]
  templates Template[]
  templateInstances TemplateInstance[]
  kpis      KPI[]
  kpiDataPoints KPIDataPoint[]
  actionItems ActionItem[]
  meetings  Meeting[]
  auditLogs AuditLog[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model User {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  email     String   @unique
  name      String
  role      String
  password  String
  dashboards Dashboard[]
  actionItems ActionItem[] @relation("ActionOwners")
  meetingsFacilitated Meeting[] @relation("MeetingFacilitator")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dashboard {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id        String   @id @default(uuid())
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  slug      String
  name      String
  category  String
  summary   String
  fields    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  instances TemplateInstance[]
}

model TemplateInstance {
  id          String   @id @default(uuid())
  templateId  String
  template    Template @relation(fields: [templateId], references: [id])
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  name        String
  state       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model KPI {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  name      String
  description String?
  category  String
  unit      String
  direction String
  dataPoints KPIDataPoint[]
}

model KPIDataPoint {
  id        String   @id @default(uuid())
  metricId  String
  metric    KPI      @relation(fields: [metricId], references: [id])
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  recordedAt DateTime
  value     Float
  projected Boolean  @default(false)
}

model ActionItem {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  title     String
  description String?
  ownerId   String
  owner     User     @relation("ActionOwners", fields: [ownerId], references: [id])
  dueDate   DateTime?
  status    String   @default("open")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meeting {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  title     String
  agenda    String?
  cadence   String
  facilitatorId String
  facilitator User @relation("MeetingFacilitator", fields: [facilitatorId], references: [id])
  nextOccurrence DateTime?
  actionItems ActionItem[]
}

model AuditLog {
  id        String   @id @default(uuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  actorId   String
  actor     User     @relation(fields: [actorId], references: [id])
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}
