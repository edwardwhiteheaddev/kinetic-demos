{
  "name": "@ceo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@ceo/shared": "workspace:*",
    "@fastify/cors": "9.0.0",
    "@fastify/jwt": "9.0.2",
    "@fastify/sensible": "5.0.1",
    "@prisma/client": "5.10.2",
    "bcryptjs": "2.4.3",
    "bullmq": "4.8.0",
    "dotenv": "16.4.5",
    "fastify": "4.26.2",
    "fastify-plugin": "5.0.1",
    "pino": "8.21.0",
    "pino-pretty": "10.3.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/node": "20.12.7",
    "prisma": "5.10.2",
    "supertest": "6.3.4",
    "tsup": "8.0.1",
    "tsx": "4.7.1",
    "vitest": "1.4.0"
  }
}
